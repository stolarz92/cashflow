{% extends 'CashflowBundle::base.html.twig' %}

{% block body %}
    <h3>Wallet {{ wallet.name }}</h3>
    <p>Description: {{ wallet.description }}</p>
    <article class="transactions">
        <h4>Last 5 transactions</h4>
        {% if transactions %}
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for transaction in transactions %}
                    <tr>
                        <td>{{ transaction.name ? transaction.name }}</td>
                        <td>{{ transaction.description ? transaction.description }}</td>
                        <td>{{ transaction.amount ? transaction.amount }}
                        <td><a href="{{ path('transactions-edit', { 'id' : transaction.id }) }}">Edit</a></td>
                        <td><a href="{{ path('transactions-delete', { 'id' : transaction.id }) }}">Delete</a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <a href="{{ path('transactions', { 'id' : wallet.id }) }}">Show all transactions</a>
        {% else %}
            <p>There are no transactions for this wallet yet.</p>
        {% endif %}
    </article>
{% endblock %}