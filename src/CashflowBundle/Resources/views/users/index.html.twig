{% extends 'CashflowBundle::base.html.twig' %}
{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Email</th>
            <th>Rola</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles[0] }}
                    {% if current_user_id != user.id %}
                        <a class="btn btn-warning btn-xs" href="{{ path('admin-user-edit-role', { 'id' : user.id}) }}">Zmień rolę</a>
                    {% endif %}
                </td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}