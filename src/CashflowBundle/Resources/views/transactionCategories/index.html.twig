{% extends 'CashflowBundle::base.html.twig' %}

{% block body %}
    <h2>Kategorie transakcji</h2>
    {% if transactionCategories %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Akcja</th>
            </tr>
            </thead>
            <tbody>
            {% for category in transactionCategories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td><a class="btn btn-warning btn-sm" href="{{ path('admin-transaction-categories-edit', { 'id': category.id }) }}">
                            Edytuj
                        </a></td>
                    <td>
                        <a class="btn btn-danger btn-xs" href="{{ path('admin-transaction-categories-delete', { 'id': category.id }) }}">
                            Usuń
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Nie ma żadnych kategorii.</p>
    {% endif %}
    <a class="btn btn-primary" href="{{ path('admin-transaction-categories-add') }}">Dodaj kategorię</a>
{% endblock %}